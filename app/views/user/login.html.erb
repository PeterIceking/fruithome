<style type="text/css">
form {
	 margin: 0 auto;
	 padding:30px 0;
	 width: 400px;
	 font-size: 20px; 
	 text-align:center;
}
form .form-control {
	width:270px;
}
.login-box .btn {
	width:150px
}
.submit {
	margin-left:17px;
}
</style>
<div style="width:1000px;margin:0 auto" class="login-box">
	<div style="width:100%;" class="login-box-wrapper">
		<div style="height:40px;line-height:40px;background:#40AF39;width:100%;margin:20px auto;" class="login-box-title">
			<h4><a style="font-size:20px;padding:10px;display:inline-block;color:white;text-decoration:none;" href="http://localhost:3000">水果之家FRUITHOME</a></h4>
		</div>
		<div style="width:100%;height:450px;" class="login-content">
			<div style="float:left;width:600px;padding:5px 0 10px 50px;" class="login-left">
				<h4 style="border-bottom:2px solid #40AF39;height:35px;">会员登陆</h4>
				<%= form_tag %>
					<p><span for="login">邮箱：</span>
					<%= text_field_tag 'login', nil, class:"form-control" %></p>

					<p><span for="password">密码：</span>
					<%= password_field_tag 'password', nil, class:"form-control" %></p>

					<!-- <p><span for="remember_me">记住密码：</span>
					<%= check_box_tag 'remember_me', "p", "true" %></p> -->
					
					<%= submit_tag "登陆", :class => "submit btn btn-success" %>
					<a href="#" style="vertical-align:bottom;text-decoration:none;font-size:16px;">忘记密码</a>
			</div>
			<div style="float:right;width:300px;padding:100px 0;text-align:center;" class="login-right">
				<p>还不是水果之家会员？</p>
				<%= link_to "免费注册", register_path, class:"btn btn-success", style:"width:100px;"%>
			</div>
		</div>
	</div>
</div>
