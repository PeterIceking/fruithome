<div style="margin:10px auto;">
	<div style="font-size:30px;padding-top:7px;border-bottom:1px solid #999999;">收货地址管理</div>
	<div>	
<% if flash[:alert] %>
	<%= flash[:alert] %>
<% end %>
	<%= form_for :mail_addresses, url:{action:"update_mail_address"} do |f| %>
		<table class="table table-striped table-bordered " id="DataTables_Table_0"">
			<% addresses = @current_user.mail_addresses %>
			<% (1..3).each do |i| %>
				<tr role="row"><th>收货地址<%= i %></th></tr>
				<tr><td>
					<% address_id,address_add,address_post = addresses[i-1].id,addresses[i-1].address,addresses[i-1].post_code if addresses[i-1] %>
					<%= f.text_field "add_#{address_id}", value:address_add, placeholder:"地址" %>
					<%= f.text_field "post_#{address_id}", value:address_post, placeholder:"邮政编码" %>
				</td></tr>
			<% end %>
		</table>
		<div style="text-align:center;">
			<%= submit_tag "保存", :class => "submit btn btn-success" %>
		</div>
	<% end %>
		
		
	</div>
</div>