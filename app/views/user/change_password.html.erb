<div style="margin:10px auto;">
	<div style="font-size:30px;padding-top:7px;border-bottom:1px solid #999999;">修改密码</div>
	<div>	
<% if flash[:alert] %>
	<%= flash[:alert] %>
<% end %>
	<%= form_for :password, url:{action:"change_password"} do |f| %>
		<table class="table table-striped table-bordered " id="DataTables_Table_0"">
			<tr role="row"><th>原始密码</th></tr>
			<tr><td><%= f.password_field :password_old %></td></tr>
			<tr><th>新密码</th></tr>
			<tr><td><%= f.password_field :password %></td></tr>
			<tr><th>确认新密码</th></tr>
			<tr><td><%= f.password_field :password_confirmation %></td></tr>
		</table>
		<div style="text-align:center;">
			<%= submit_tag "保存", :class => "submit btn btn-success" %>
		</div>
	<% end %>
		
		
	</div>
</div>