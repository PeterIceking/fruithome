<div style="margin:10px auto;">
<% if flash[:alert] %>
	<%= flash[:alert] %>
<% end %>
	<div style="font-size:30px;padding-top:7px;border-bottom:1px solid #999999;">编辑个人信息</div>
	<div>	
	<%= form_for :user, url:{action:"update_info"} do |f| %>
		<table class="table table-striped table-bordered " id="DataTables_Table_0"">
			<tr role="row">
				<td>用户名</td>
				<td><%= f.text_field :username, value:@current_user.username %></td>
			</tr>
			<tr>
				<td>真实姓名</td>
				<td><%= f.text_field :real_name, value:@current_user.real_name %></td>
			</tr>
			<tr>
				<td>性别</td>
				<td>
					<%= f.radio_button :sex, "男", checked:(true if @current_user.sex.eql? "男") %>男
					<%= f.radio_button :sex, "女", checked:(true if @current_user.sex.eql? "女") %>女
				</td>
			</tr>
			<tr>
				<td>生日</td>
				<td><%= f.date_field :birthdate, value:@current_user.birthdate %></td>
			</tr>
			<tr>
				<td>邮箱</td>
				<td><%= f.text_field :e_mail, value:@current_user.e_mail %></td>
			</tr>
			<tr>
				<td>联系电话</td>
				<td><%= f.phone_field :phone_number, value:@current_user.phone_number %></td>
			</tr>
			<tr>
				<td>所在城市</td>
				<td><%= f.text_field :city, value:@current_user.city %></td>
			</tr>
			<tr>
		</table>
		<div style="text-align:center;">
			<%= submit_tag "保存", :class => "submit btn btn-success" %>
		</div>
	<% end %>
		
		
	</div>
</div>