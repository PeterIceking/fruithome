<div style="margin:10px auto;">
	<div style="font-size:30px;padding-top:7px;border-bottom:1px solid #999999;">个人信息</div>
	<div>
		<table class="table table-striped table-bordered " id="DataTables_Table_0"">
				<tr role="row">
					<td>用户名</td>
					<td><%= @current_admin_user.username %></td>
				</tr>
				<tr>
					<td>管理员类型</td>
					<td><%= @current_admin_user.admin_type %></td>
				</tr>
				<tr>
					<td>邮箱</td>
					<td><%= @current_admin_user.e_mail %></td>
				</tr>
				<tr>
					<td>联系电话</td>
					<td><%= @current_admin_user.phone_number %></td>
				</tr>
				<tr>
					<td>最近登录</td>
					<td><%= @current_admin_user.latest_log_date.to_s[0..19] %></td>
				</tr>
		</table>
		<div style="text-align:center;">
			<%= link_to "编辑", admin_user_edit_info_path %>
		</div>
	</div>
</div>