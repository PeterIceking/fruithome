<div style="margin:10px auto;">
<% if flash[:alert] %>
	<%= flash[:alert] %>
<% end %>
	<div style="font-size:30px;padding-top:7px;border-bottom:1px solid #999999;">编辑安全问题</div>
	<div>	
	<%= form_for :user, url:{action:"update_security"} do |f| %>
		<table class="table table-striped table-bordered " id="DataTables_Table_0"">
			<tr role="row"><th>安全问题</th></tr>
			<tr><td><%= f.text_field :question, value:@current_user.question %></td></tr>
			<tr><th>答案</th></tr>
			<tr><td><%= f.text_field :answer, value:@current_user.answer %></td></tr>
		</table>
		<div style="text-align:center;">
			<%= submit_tag "保存", :class => "submit btn btn-success" %>
		</div>
	<% end %>
		
		
	</div>
</div>