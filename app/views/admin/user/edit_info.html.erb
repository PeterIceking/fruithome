<div style="margin:10px auto;">
<% if flash[:alert] %>
	<%= flash[:alert] %>
<% end %>
	<div style="font-size:30px;padding-top:7px;border-bottom:1px solid #999999;">编辑个人信息</div>
	<div>	
	<%= form_for :admin_user, url:{action:"update_info"} do |f| %>
		<table class="table table-striped table-bordered " id="DataTables_Table_0"">
			<tr role="row">
				<td>用户名</td>
				<td><%= f.text_field :username, value:@current_admin_user.username %></td>
			</tr>
			<tr>
				<td>管理员类型</td>
				<td><%= f.text_field :e_mail, value:@current_admin_user.admin_type, disabled:true %></td>
			</tr>
			<tr>
				<td>邮箱</td>
				<td><%= f.text_field :e_mail, value:@current_admin_user.e_mail %></td>
			</tr>
			<tr>
				<td>联系电话</td>
				<td><%= f.phone_field :phone_number, value:@current_admin_user.phone_number %></td>
			</tr>
			<tr>
		</table>
		<div style="text-align:center;">
			<%= submit_tag "保存", :class => "submit btn btn-success" %>
		</div>
	<% end %>
		
		
	</div>
</div>