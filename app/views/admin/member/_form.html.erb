<% if flash[:alert] %>
	<%= flash[:alert] %>
<% end %>
<table class="table table-striped table-bordered">
	<tr>
		<td>会员名</td>
		<td><%= @member.username %></td>
	</tr>
	<tr>
		<td>会员实名</td>
		<td><%= @member.real_name %></td>
	</tr>
	<tr>
		<td>邮箱</td>
		<td><%= @member.e_mail %></td>
	</tr>
	<tr>
		<td>联系电话</td>
		<td><%= @member.phone_number %></td>
	</tr>
	<tr>
		<td>所在城市</td>
		<td><%= @member.city %></td>
	</tr>
	<tr>
		<td>状态</td>
		<td>
			<%= text_field "member", "status" %>
			<span style="color:red;">状态设置为0，则屏蔽用户；为1，则为正常状态</span>
		</td>
	</tr>
</table>