<div class="fl table table-bordered" style="width:240px; height:400px;margin:15px;">
	<div class="" style="">
		<%= link_to :action => "show", :id => fruit_search do %>
			<%= image_tag "fruit_images/#{fruit_search.id}_270_270_1.jpg", :width => "250px", :alt =>"#{fruit_search.name}" %>
		<% end %>
	</div>
	<div style="">
		<ul style="margin: 0 0 9px 15px;">
			<li style="width:200px;height:20px;">
				<%= link_to :action => "show", :id => fruit_search do %>
					<strong><%= fruit_search.name %></strong>
				<% end %>
			</li>
			<li style="width:200px;height:30px;"><span style="display:block;text-overflow:ellipsis;white-space:nowrap;overflow:hidden;"><%= fruit_search.brief_introduction %></span></li>
			<li style="width:200px">
				<span ><%= fruit_search.price_present %></span>
				<span>/</span>
				<span style=""><%= fruit_search.unit %></span>
			</li>
			<li>
				<% op=fruit_search.origin_place %>
				<span style="display:block;"><%= op ? op.name : "" %></span>
			</li>
		</ul>
	</div>
</div>