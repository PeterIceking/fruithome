<%= javascript_include_tag "jquery-1.7.2.min", "data-turbolinks-track" => true %>

<!-- jQuery UI -->
<%= javascript_include_tag "jquery-ui-1.8.21.custom.min", "data-turbolinks-track" => true %>

<!-- custom dropdown library -->
<%= javascript_include_tag "bootstrap-dropdown", "data-turbolinks-track" => true %>

<!-- library for creating tabs -->
<%= javascript_include_tag "bootstrap-tab", "data-turbolinks-track" => true %>

<!-- library for advanced tooltip -->
<%= javascript_include_tag "bootstrap-tooltip", "data-turbolinks-track" => true %>

<!-- popover effect library -->
<%= javascript_include_tag "bootstrap-popover", "data-turbolinks-track" => true %>

<!-- library for cookie management -->
<%= javascript_include_tag "jquery.cookie", "data-turbolinks-track" => true %>

<!-- calander plugin -->
<!-- <%= javascript_include_tag "fullcalendar.min", "data-turbolinks-track" => true %> -->

<!-- data table plugin -->
<%= javascript_include_tag "jquery.dataTables.min", "data-turbolinks-track" => true %>

<!-- chart libraries start -->
<%= javascript_include_tag "excanvas", "data-turbolinks-track" => true %>
